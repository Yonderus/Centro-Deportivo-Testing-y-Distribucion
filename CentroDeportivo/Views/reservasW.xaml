<Window x:Class="CentroDeportivo.Views.reservasW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo.Views"
        mc:Ignorable="d"
        Title="reservasW" Height="500" Width="700">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,63,506,97" Background="#FFDADADA"/>

        <DataGrid Margin="218,63,27,97"
                  ItemsSource="{Binding Reservas}"
                  SelectedItem="{Binding Seleccionada}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SocioId" Binding="{Binding SocioId}" Width="120"/>
                <DataGridTextColumn Header="ActividadId" Binding="{Binding ActividadId}" Width="120"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btbAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="10,399,0,0" VerticalAlignment="Top"
                Height="46" Width="163" Background="#FF51EE7B" FontFamily="MS Gothic" FontWeight="Bold" FontSize="16" Foreground="#FF00491B"
                Command="{Binding InsertarCommand}"/>

        <Button x:Name="btbEditar" Content="Editar" HorizontalAlignment="Left" Margin="256,399,0,0" VerticalAlignment="Top"
                Height="46" Width="162" Background="#FFF3FB6F" FontFamily="MS Gothic" FontWeight="Bold" FontSize="16" Foreground="#FFC16F00"
                Command="{Binding EditarCommand}"/>

        <Button x:Name="btbEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="510,399,0,0" VerticalAlignment="Top"
                Height="46" Width="163" Background="#FFF99393" FontFamily="MS Gothic" FontWeight="Bold" FontSize="16" Foreground="#FFBC0000"
                Command="{Binding EliminarCommand}"/>

        <Label x:Name="lbltitulo" Content="Gestión Reservas" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"
               FontFamily="MS Gothic" FontWeight="Bold" FontSize="22" Width="236"/>

        <DatePicker x:Name="dpFecha" HorizontalAlignment="Left" Margin="30,291,0,0" VerticalAlignment="Top" Height="42"
                    SelectedDate="{Binding Fecha, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Fecha:" HorizontalAlignment="Left" Margin="30,265,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <ComboBox x:Name="cbActividad" HorizontalAlignment="Left" Margin="30,220,0,0" VerticalAlignment="Top" Width="120"
                  ItemsSource="{Binding Actividades}"
                  DisplayMemberPath="Nombre"
                  SelectedItem="{Binding ActividadSeleccionada}"/>

        <ComboBox x:Name="cbSocio" HorizontalAlignment="Left" Margin="30,151,0,0" VerticalAlignment="Top" Width="120"
                  ItemsSource="{Binding Socios}"
                  DisplayMemberPath="Nombre"
                  SelectedItem="{Binding SocioSeleccionado}"/>

        <Label Content="Id Socio:" HorizontalAlignment="Left" Margin="34,120,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Id Actividad:" HorizontalAlignment="Left" Margin="34,189,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
    </Grid>
</Window>
