<Window x:Class="CentroDeportivo.Views.sociosW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo.Views"
        mc:Ignorable="d"
        Title="sociosW" Height="500" Width="700">
    <Grid>
        <!-- DataGrid -->
        <DataGrid Margin="218,63,27,97"
                  ItemsSource="{Binding Lista}"
                  SelectedItem="{Binding Seleccionado}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label x:Name="lbltitulo" Content="Gestión Socios" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" FontFamily="MS Gothic" FontWeight="Bold" FontSize="22" Width="236"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,63,506,97" Background="#FFDADADA"/>

        <!-- Inputs -->
        <TextBox x:Name="tbNombre"
                 HorizontalAlignment="Left" Margin="23,141,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="120" Height="28"
                 Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="23,110,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <TextBox x:Name="tbEmail"
                 HorizontalAlignment="Left" Margin="23,209,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="120" Height="28"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="23,177,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <!-- Activo -->
        <ComboBox x:Name="cbActivo"
                  HorizontalAlignment="Left" Margin="23,273,0,0"
                  VerticalAlignment="Top" Width="120"
                  SelectedValuePath="Content"
                  SelectedValue="{Binding Activo, Mode=TwoWay}">
            <ComboBoxItem Content="True"/>
            <ComboBoxItem Content="False"/>
        </ComboBox>
        <Label Content="Activo" HorizontalAlignment="Left" Margin="23,242,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <!-- Botones -->
        <Button x:Name="btbAgregar" Content="Agregar"
                HorizontalAlignment="Left" Margin="10,399,0,0" VerticalAlignment="Top"
                Height="46" Width="163" Background="#FF51EE7B"
                FontFamily="MS Gothic" FontWeight="Bold" FontSize="16"
                Foreground="#FF00491B"
                Command="{Binding InsertarCommand}"/>

        <Button x:Name="btbEditar" Content="Editar"
                HorizontalAlignment="Left" Margin="256,399,0,0" VerticalAlignment="Top"
                Height="46" Width="162" Background="#FFF3FB6F"
                FontFamily="MS Gothic" FontWeight="Bold" FontSize="16"
                Foreground="#FFC16F00"
                Command="{Binding EditarCommand}"/>

        <Button x:Name="btbEliminar" Content="Eliminar"
                HorizontalAlignment="Left" Margin="510,399,0,0" VerticalAlignment="Top"
                Height="46" Width="163" Background="#FFF99393"
                FontFamily="MS Gothic" FontWeight="Bold" FontSize="16"
                Foreground="#FFBC0000"
                Command="{Binding EliminarCommand}"/>
    </Grid>
</Window>
